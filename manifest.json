{
  "manifest_version": 3,
  "name": "Tabwise â€” Vertical Tab Manager",
  "version": "2.0.0",
  "description": "Vertical tabs sidebar with workspaces, smart tab switching, and favorites for Chrome, Brave, Edge, and AI browsers.",
  "homepage_url": "https://github.com/SwajanJain/tabwise",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "favicon",
    "history",
    "bookmarks",
    "downloads",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Toggle Workspaces Panel"
  },
  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Toggle workspaces side panel"
    },
    "quick-open": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Focus search in side panel"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
